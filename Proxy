<body>
    <div class="container">
        <h1>üåê Proxy List Viewer</h1>

        <div class="stats" id="stats">
            <div class="stat-card">
                <div class="stat-value" id="totalCount">0</div>
                <div class="stat-label">Total Proxies</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="countryCount">0</div>
                <div class="stat-label">Countries</div>
            </div>
        </div>

        <button id="loadBtn" onclick="loadProxies()">
            üîÑ T·∫£i danh s√°ch Proxy
        </button>

        <div class="loading" id="loading">
            ‚è≥ ƒêang t·∫£i d·ªØ li·ªáu...
        </div>

        <div class="error" id="error"></div>

        <div class="proxy-list" id="proxyList">
            <input 
                type="text" 
                class="search-box" 
                id="searchBox" 
                placeholder="üîç T√¨m ki·∫øm theo host, country, username..."
            >

            <div class="filters" id="filters"></div>

            <div id="proxyItems"></div>
        </div>
    </div>

    <script>
        let allProxies = [];
        let filteredProxies = [];
        let selectedCountry = 'ALL';

        async function loadProxies() {
            const loading = document.getElementById('loading');
            const error = document.getElementById('error');
            const proxyList = document.getElementById('proxyList');
            const loadBtn = document.getElementById('loadBtn');

            // Reset
            loading.classList.remove('show');
            error.classList.remove('show');
            proxyList.classList.remove('show');

            loading.classList.add('show');
            loadBtn.disabled = true;

            try {
                // G·ªçi API
                const response = await fetch('https://api-beta-app.vercel.app/api/getproxy');
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }

                const result = await response.json();
                console.log('API Response:', result);

                if (result.success && result.data && result.data.data) {
                    allProxies = result.data.data;
                    filteredProxies = allProxies;
                    
                    displayStats();
                    createFilters();
                    displayProxies();
                    
                    proxyList.classList.add('show');
                } else {
                    showError('Kh√¥ng th·ªÉ t·∫£i d·ªØ li·ªáu proxy!');
                }

            } catch (err) {
                console.error('Error:', err);
                showError('‚ùå L·ªói k·∫øt n·ªëi: ' + err.message);
            } finally {
                loading.classList.remove('show');
                loadBtn.disabled = false;
            }
        }

        function displayStats() {
            const countries = [...new Set(allProxies.map(p => p.country))];
            
            document.getElementById('totalCount').textContent = allProxies.length;
            document.getElementById('countryCount').textContent = countries.length;
        }

        function createFilters() {
            const countries = [...new Set(allProxies.map(p => p.country))].sort();
            const filtersDiv = document.getElementById('filters');
            
            let html = '<button class="filter-btn active" onclick="filterByCountry(\'ALL\')">ALL</button>';
            
            countries.forEach(country => {
                const count = allProxies.filter(p => p.country === country).length;
                html += `<button class="filter-btn" onclick="filterByCountry('${country}')">${country} (${count})</button>`;
            });
            
            filtersDiv.innerHTML = html;
        }

        function filterByCountry(country) {
            selectedCountry = country;
            
            // Update active button
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // Filter proxies
            if (country === 'ALL') {
                filteredProxies = allProxies;
            } else {
                filteredProxies = allProxies.filter(p => p.country === country);
            }
            
            displayProxies();
        }

        function displayProxies() {
            const container = document.getElementById('proxyItems');
            
            if (filteredProxies.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: #999; padding: 30px;">Kh√¥ng t√¨m th·∫•y proxy n√†o</p>';
                return;
            }
            
            let html = '';
            
            filteredProxies.forEach((proxy, index) => {
                const proxyString = `${proxy.host}:${proxy.port}:${proxy.username}:${proxy.password}`;
                
                html += `
                    <div class="proxy-item">
                        <div class="proxy-header">
                            <span class="proxy-host">${proxy.host}:${proxy.port}</span>
                            <span class="country-badge">${proxy.country}</span>
                        </div>
                        <div class="proxy-details">
                            <div class="detail-item">
                                <span class="detail-label">Username:</span>
                                <span>${proxy.username}</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Password:</span>
                                <span>${proxy.password}</span>
                            </div>
                        </div>
                        <button class="copy-btn" onclick="copyProxy('${proxyString}')">
                            üìã Copy
                        </button>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }

        function copyProxy(text) {
            navigator.clipboard.writeText(text).then(() => {
                event.target.textContent = '‚úì ƒê√£ copy!';
                setTimeout(() => {
                    event.target.textContent = 'üìã Copy';
                }, 2000);
            }).catch(err => {
                alert('Kh√¥ng th·ªÉ copy: ' + err);
            });
        }

        function showError(message) {
            const error = document.getElementById('error');
            error.textContent = message;
            error.classList.add('show');
        }

        // Search functionality
        document.getElementById('searchBox').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            
            if (searchTerm === '') {
                filteredProxies = selectedCountry === 'ALL' 
                    ? allProxies 
                    : allProxies.filter(p => p.country === selectedCountry);
            } else {
                const baseProxies = selectedCountry === 'ALL' 
                    ? allProxies 
                    : allProxies.filter(p => p.country === selectedCountry);
                
                filteredProxies = baseProxies.filter(p => 
                    p.host.toLowerCase().includes(searchTerm) ||
                    p.country.toLowerCase().includes(searchTerm) ||
                    p.username.toLowerCase().includes(searchTerm)
                );
            }
            
            displayProxies();
        });
    </script>
</body>
</html>
