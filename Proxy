<body>
    <div class="container">
        <div class="header">
            <h1>üåê Proxy Manager Pro</h1>
            <p class="subtitle">Advanced Proxy Management & Export Tool</p>
        </div>

        <div class="control-panel">
            <div class="button-group">
                <button onclick="loadProxies()">
                    üîÑ T·∫£i Proxies
                </button>
                <button class="btn-success" onclick="openExportModal()" id="exportBtn" disabled>
                    üì• Export
                </button>
                <button class="btn-secondary" onclick="copyAllProxies()" id="copyAllBtn" disabled>
                    üìã Copy All
                </button>
                <button class="btn-secondary" onclick="clearData()">
                    üóëÔ∏è Clear
                </button>
            </div>

            <div class="stats-grid" id="stats">
                <div class="stat-card">
                    <div class="stat-value" id="totalCount">0</div>
                    <div class="stat-label">Total</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value" id="countryCount">0</div>
                    <div class="stat-label">Countries</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value" id="displayCount">0</div>
                    <div class="stat-label">Showing</div>
                </div>
            </div>

            <input 
                type="text" 
                class="search-bar" 
                id="searchBox" 
                placeholder="üîç Search by host, country, username..."
            >

            <div class="filter-chips" id="filters"></div>
        </div>

        <div class="loading" id="loading">
            <div>‚è≥ Loading proxies...</div>
        </div>

        <div class="proxy-grid" id="proxyGrid"></div>
    </div>

    <!-- Export Modal -->
    <div class="modal" id="exportModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>üì• Export Proxies</h3>
                <p style="color: #888; font-size: 13px;">Choose export format</p>
            </div>
            <div class="modal-body">
                <div class="format-option" onclick="selectFormat('standard')">
                    <strong>Standard Format</strong>
                    <div style="color: #888; font-size: 12px; margin-top: 5px;">
                        host:port:username:password
                    </div>
                </div>
                <div class="format-option" onclick="selectFormat('url')">
                    <strong>URL Format</strong>
                    <div style="color: #888; font-size: 12px; margin-top: 5px;">
                        http://username:password@host:port
                    </div>
                </div>
                <div class="format-option" onclick="selectFormat('json')">
                    <strong>JSON Format</strong>
                    <div style="color: #888; font-size: 12px; margin-top: 5px;">
                        Full JSON array with all details
                    </div>
                </div>
            </div>
            <div style="display: flex; gap: 10px;">
                <button onclick="closeExportModal()" style="flex: 1;">Cancel</button>
                <button onclick="exportProxies()" style="flex: 2;" class="btn-success">Export</button>
            </div>
        </div>
    </div>

    <script>
        let allProxies = [];
        let filteredProxies = [];
        let selectedCountry = 'ALL';
        let selectedFormat = 'standard';

        async function loadProxies() {
            const loading = document.getElementById('loading');
            const proxyGrid = document.getElementById('proxyGrid');

            loading.classList.add('show');
            proxyGrid.innerHTML = '';

            try {
                const response = await fetch('https://api-beta-app.vercel.app/api/getproxy');
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}`);
                }

                const result = await response.json();

                if (result.success && result.data && result.data.data) {
                    allProxies = result.data.data;
                    filteredProxies = allProxies;
                    
                    updateStats();
                    createFilters();
                    displayProxies();
                    
                    document.getElementById('exportBtn').disabled = false;
                    document.getElementById('copyAllBtn').disabled = false;
                } else {
                    showEmptyState('‚ùå Failed to load proxies');
                }

            } catch (err) {
                showEmptyState('‚ùå Error: ' + err.message);
            } finally {
                loading.classList.remove('show');
            }
        }

        function updateStats() {
            const countries = [...new Set(allProxies.map(p => p.country))];
            
            document.getElementById('totalCount').textContent = allProxies.length;
            document.getElementById('countryCount').textContent = countries.length;
            document.getElementById('displayCount').textContent = filteredProxies.length;
        }

        function createFilters() {
            const countries = [...new Set(allProxies.map(p => p.country))].sort();
            const filtersDiv = document.getElementById('filters');
            
            let html = '<div class="chip active" onclick="filterByCountry(\'ALL\')">ALL</div>';
            
            countries.forEach(country => {
                const count = allProxies.filter(p => p.country === country).length;
                html += `<div class="chip" onclick="filterByCountry('${country}')">${country} (${count})</div>`;
            });
            
            filtersDiv.innerHTML = html;
        }

        function filterByCountry(country) {
            selectedCountry = country;
            
            document.querySelectorAll('.chip').forEach(chip => {
                chip.classList.remove('active');
            });
            event.target.classList.add('active');
            
            applyFilters();
        }

        function applyFilters() {
            const searchTerm = document.getElementById('searchBox').value.toLowerCase();
            
            filteredProxies = allProxies.filter(p => {
                const matchCountry = selectedCountry === 'ALL' || p.country === selectedCountry;
                const matchSearch = searchTerm === '' || 
                    p.host.toLowerCase().includes(searchTerm) ||
                    p.country.toLowerCase().includes(searchTerm) ||
                    p.username.toLowerCase().includes(searchTerm);
                
                return matchCountry && matchSearch;
            });
            
            updateStats();
            displayProxies();
        }

        function displayProxies() {
            const container = document.getElementById('proxyGrid');
            
            if (filteredProxies.length === 0) {
                showEmptyState('No proxies found');
                return;
            }
            
            let html = '';
            
            filteredProxies.forEach(proxy => {
                html += `
                    <div class="proxy-card">
                        <div class="proxy-header">
                            <span class="proxy-host">${proxy.host}:${proxy.port}</span>
                            <span class="country-flag">${proxy.country}</span>
                        </div>
                        <div class="proxy-details">
                            <div class="detail-row">
                                <span class="detail-label">Username:</span>
                                <span class="detail-value">${proxy.username}</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Password:</span>
                                <span class="detail-value">${proxy.password}</span>
                            </div>
                        </div>
                        <div class="proxy-actions">
                            <button class="action-btn" onclick='copyProxy("${proxy.host}:${proxy.port}:${proxy.username}:${proxy.password}")'>
                                üìã Copy
                            </button>
                            <button class="action-btn" onclick='copyProxyUrl("${proxy.username}", "${proxy.password}", "${proxy.host}", "${proxy.port}")'>
                                üîó Copy URL
                            </button>
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }

        function showEmptyState(message) {
            document.getElementById('proxyGrid').innerHTML = `
                <div class="empty-state">
                    <div class="empty-state-icon">üì≠</div>
                    <div>${message}</div>
                </div>
            `;
        }

        function copyProxy(text) {
            navigator.clipboard.writeText(text).then(() => {
                event.target.textContent = '‚úì Copied!';
                setTimeout(() => {
                    event.target.textContent = 'üìã Copy';
                }, 2000);
            });
        }

        function copyProxyUrl(user, pass, host, port) {
            const url = `http://${user}:${pass}@${host}:${port}`;
            navigator.clipboard.writeText(url).then(() => {
                event.target.textContent = '‚úì Copied!';
                setTimeout(() => {
                    event.target.textContent = 'üîó Copy URL';
                }, 2000);
            });
        }

        function copyAllProxies() {
            const text = filteredProxies.map(p => 
                `${p.host}:${p.port}:${p.username}:${p.password}`
            ).join('\n');
            
            navigator.clipboard.writeText(text).then(() => {
                alert(`‚úì Copied ${filteredProxies.length} proxies!`);
            });
        }

        function openExportModal() {
            document.getElementById('exportModal').classList.add('show');
        }

        function closeExportModal() {
            document.getElementById('exportModal').classList.remove('show');
        }

        function selectFormat(format) {
            selectedFormat = format;
            document.querySelectorAll('.format-option').forEach(opt => {
                opt.classList.remove('selected');
            });
            event.target.closest('.format-option').classList.add('selected');
        }

        function exportProxies() {
            let content = '';
            
            if (selectedFormat === 'standard') {
                content = filteredProxies.map(p => 
                    `${p.host}:${p.port}:${p.username}:${p.password}`
                ).join('\n');
            } else if (selectedFormat === 'url') {
                content = filteredProxies.map(p => 
                    `http://${p.username}:${p.password}@${p.host}:${p.port}`
                ).join('\n');
            } else if (selectedFormat === 'json') {
                content = JSON.stringify(filteredProxies, null, 2);
            }
            
            // Download file
            const blob = new Blob([content], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `proxies_${selectedFormat}_${Date.now()}.txt`;
            a.click();
            
            closeExportModal();
        }

        function clearData() {
            allProxies = [];
            filteredProxies = [];
            updateStats();
            document.getElementById('proxyGrid').innerHTML = '';
            document.getElementById('filters').innerHTML = '';
            document.getElementById('exportBtn').disabled = true;
            document.getElementById('copyAllBtn').disabled = true;
        }

        // Search listener
        document.getElementById('searchBox').addEventListener('input', applyFilters);
    </script>
</body>
</html>
